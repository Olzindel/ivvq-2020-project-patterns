type Order {
    id: ID!
    status: OrderStatus!
    orderItems: [OrderItem!]
    User: User!
}

input OrderInput {
    status:OrderStatus
    orderItemIds:[ID!]
    userId:ID
}

enum OrderStatus {
    BASKET
    PAID
    ABORTED
}

extend type Query {
    orders(count: Int!):[Order]
    order(orderId: ID!):Order
}

extend type Mutation {
    updateOrder(orderId:ID!,input:OrderInput!):Order
    createOrder(input:OrderInput):Order
    deleteOrder(orderId:ID!):ID
}