type Order {
    id: ID!
    createdAt: String
    orderStatus: OrderStatus!
    OrderItems: [OrderItem!]
    User: User!
}

enum OrderStatus {
    BASKET
    PAID
    ABORTED
}

extend type Query {
    orders(count: Int!):[Order]
    order(orderId: ID!):Order
}

extend type Mutation {
    updateOrder(orderId:ID!,orderStatus:OrderStatus,orderItemIds:[ID!], createdAt:String, userId:ID ):Order
    createOrder(orderStatus:OrderStatus!,orderItemIds:[ID!], userId:ID! ):Order
    deleteOrder(orderId:ID!):ID
}