type OrderItem {
    id: ID!
    quantity: Int!
    product: Product!
    order: Order!
}

input OrderItemInput {
    id: ID!
    quantity: Int
    product: ProductInput
    order: OrderInput
}


extend type Query {
    orderItems(count: Int!):[OrderItem]
    orderItem(orderItemId: ID!):OrderItem
}

extend type Mutation {
    updateOrderItem(input:OrderItemInput):OrderItem
    createOrderItem(quantity:Int!, productId:ID!, orderId:ID!):OrderItem
    deleteOrderItem(orderItemId:ID!):ID
}